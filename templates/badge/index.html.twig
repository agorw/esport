{% extends 'base.html.twig' %}

{% block title %}Badge index{% endblock %}

{% block body %}
    <h1>Badge index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Description</th>
                <th>Level</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for badge in badges %}
            <tr>
                <td>{{ badge.id }}</td>
                <td>{{ badge.nom }}</td>
                <td>{{ badge.type }}</td>
                <td>{{ badge.description }}</td>
                <td>{{ badge.level }}</td>
                <td>
                    <a href="{{ path('badge_show', {'id': badge.id}) }}">show</a>
                    <a href="{{ path('badge_edit', {'id': badge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('badge_new') }}">Create new</a>
{% endblock %}
