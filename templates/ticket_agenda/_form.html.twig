{{ form_start(form) }}
{% embed "decorators/_card.html.twig" %}
    {% block body %}
    {{ form_errors(form) }}
    <div class="form-group">
    {{ form_row(form.title, { 'label': 'Titre' }) }}
    </div>
    <div class="form-group">
    {{ form_row(form.date_event, { 'label': 'Date de l\'événement' }) }}
    </div>
    <div class="form-group">
    {{ form_row(form.type, { 'label': 'Type de l\'événement' }) }}
    </div>
    <div class="form-group">
    {{ form_row(form.description, { 'label': 'Description' }) }}
    </div>
    <div class="form-group">
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
    {% endblock %}
{% endembed %}
{{ form_end(form) }}
